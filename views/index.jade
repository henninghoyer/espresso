extends layout

block content
  #wrapper
    header
      //- h1= title
      h1 Track Spending
    form#inputForm
      //- label(for='Amount') Amount
      input(type='number',name='amount',min='0.01',step='0.01',placeholder='Amount')
      //- label(for='category') Spent On
      select(id='category',name='category',class='inactive')
        option(value='',selected,disabled,default) Select a Category
        each item in clist
          option(value='#{item.value}') #{item.name}
      button#btnSubmit(type="submit") Submit
      #debugout